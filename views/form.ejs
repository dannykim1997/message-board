<!-- views/form.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1>New Message</h1>
    <form method="POST" action="/new">
        <label for="messageUser">Your Name:</label>
        <input type="text" id="messageUser" name="messageUser" required><br>
        <label for="messageText">Message:</label>
        <textarea id="messageText" name="messageText" required></textarea><br>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
